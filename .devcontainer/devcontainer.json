{
	"name": ".NET Test Visualizer",
	"image": "mcr.microsoft.com/devcontainers/go:0-1.20-bullseye",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"files.exclude": {
					"app/go.mod": true
				},
				"go.coverOnSave": true,
				"go.coverageDecorator": {
					"type": "gutter",
					"coveredGutterStyle": "slashgreen",
					"uncoveredGutterStyle": "slashred"
				},
				"go.testOnSave": true
			},
			"extensions": [
				"vscode-icons-team.vscode-icons",
				"editorconfig.editorconfig",
				"mhutchie.git-graph",
				"github.vscode-github-actions",
				"golang.go"
			]
		}
	}
}
